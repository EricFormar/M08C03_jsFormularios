<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Movie add</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous" />

    <link rel="stylesheet" href="/css/style.css" />
</head>

<body>
    <figure>
        <img src="/img/logo-DH.png" alt="Logo Digital House" />
    </figure>
    <h1 class="moviesAddTitulo"></h1>
    <br />
    <section id="formulario">
        <article>
            <form id="form-addMovie" action="/movies/create" method="POST" class="row g-3 needs-validation" novalidate>
                <div class="col-6 mb-3">
                    <label for="title">Titulo </label>
                    <div class="input-group has-validation">
                        <input class="form-control" type="text" name="title" id="title" required />
                        <div class="invalid-feedback">
                            <span class="text-danger" id="error-title">El campo es obligatorio</span>
                        </div>
                    </div>
                </div>
                <div class="col-6 mb-3">
                    <label for="rating">Calificación </label>
                    <div class="input-group has-validation">
                        <input class="form-control" type="number" name="rating" id="rating" required />
                        <div class="invalid-feedback">
                            <span class="text-danger" id="error-rating">El campo es obligatorio</span>
                        </div>
                    </div>
                </div>
                <div class="col-6 mb-3">
                    <label for="awards">Premios </label>
                    <div class="input-group has-validation">
                        <input class="form-control" type="number" name="awards" id="awards" required />
                        <div class="invalid-feedback">
                            <span class="text-danger" id="error-awards">El campo es obligatorio</span>
                        </div>
                    </div>
                </div>
                <div class="col-6 mb-3">
                    <label for="release_date">Fecha de creación </label>
                    <div class="input-group has-validation">
                        <input class="form-control" type="date" name="release_date" id="release_date" required />
                        <div class="invalid-feedback">
                            <span class="text-danger" id="error-release_date">El campo es obligatorio</span>
                        </div>
                    </div>
                </div>
                <div class="col-6 mb-3">
                    <label for="length">Duración </label>
                    <div class="input-group has-validation">
                        <input class="form-control" type="number" name="length" id="length" required />
                        <div class="invalid-feedback">
                            <span class="text-danger" id="error-length">El campo es obligatorio</span>
                        </div>
                    </div>
                </div>
                <div class="col-6 mb-3">
                    <label for="genreID">Género </label>
                    <div class="input-group has-validation">
                        <select class="form-select" name="genre_id" id="genre_id" required>
                            <option value="" disabled selected>
                                - Seleccione el género -
                            </option>
                            <% allGenres.forEach(genre=> { %>
                                <option value="<%= genre.id %>">
                                    <%= genre.name %>
                                </option>
                                <% }); %>
                        </select>
                        <div class="invalid-feedback">
                            <span class="text-danger" id="error-genre_id">El campo es obligatorio</span>
                        </div>
                    </div>
                </div>
                <div class="col-6 mb-3">
                    <button class="botonAgregar" type="submit">Agregar</button>
                    <a class="botonVolver" href="/movies">Listado de Películas</a>
                </div>
            </form>
        </article>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ"
        crossorigin="anonymous"></script>

    <script src="/js/moviesAddValidation.js"></script>
</body>

</html>